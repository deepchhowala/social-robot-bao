<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.5">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/null1_textview" android:layout_weight="2.5"/>
            <TextView
                    android:text="안녕하세요"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/hi_textView" android:layout_weight="2.5"/>
            <TextView
                    android:text="Bao를 사용하기위해   시작하기를 눌러 간단한 사용자 설정을 해주세요"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content" android:id="@+id/description_textView"
                    android:layout_weight="2.5"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="5.3">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/start_button"
                    android:id="@+id/start_imageView" android:layout_weight="5"
                    android:layout_gravity="right"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="5.5"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="5.7">
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>