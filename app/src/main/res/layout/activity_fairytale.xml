<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.welfarerobotics.welfareapplcation.util.TypeWriterView
            android:id="@+id/fairy_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:textColor="@color/com_kakao_button_text_press"
            android:gravity="center|left"
            android:text="옛날 옛날 아주 먼 옛날 흥부와 놀부가 살았습니다."
            android:fontFamily="@font/baemin"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/open_book"

            android:orientation="vertical" />
    </FrameLayout>

</LinearLayout>