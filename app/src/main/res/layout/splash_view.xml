<?xml version="1.0" encoding="utf-8"?>
<layout app:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SplashView">

        <variable
            name="viewModel"
            type="com.welfarerobotics.welfareapplcation.core.splash.SplashViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25" />

            <ImageView
                android:id="@+id/welfare_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="#00ffffff"
                android:visibility="visible"
                onCreate="@{viewModel::welfareLogoFadeIn}"
                app:srcCompat="@drawable/welfare_management" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25" />

        </LinearLayout>
    </LinearLayout>
</layout>
